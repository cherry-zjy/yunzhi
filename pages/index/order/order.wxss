/* pages/index/order/order.wxss */
/* 筛选、排序 */
.flex-wrp{
  margin-top: 5rpx;
  display:flex;
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}
.top .flex-item{
  font-size: 30rpx;
  padding: 10rpx 0; 
  text-align: center;
  width: 50%;
  color:#666666;
}
.sort.on{
  color: #26A3DE;
}
.search-icon{
  margin-left: 10rpx;
  width: 18rpx;
  height: 26rpx;
}
.search-icon.hide{
  display: none;
}
/* 列表 */
.list{
  width: 100%;
}
.list .flex-item{
  color: #000;
  text-align: left;
}
.list .flex-wrp{
  width: 100%;
}
.detail{
  position: relative;
   width: 70%; 
}
.list-name{
  font-size: 32rpx;
  font-weight: bolder;
}
.list-other{
  color: #999999;
  font-size: 28rpx;
  /* margin-top: 20rpx; */
  position: absolute;
  bottom: 0;
}
.list-moneybox{
  margin: 20rpx 0;
  display:flex;
}
.list-money{
  font-size: 28rpx;
  padding: 3rpx 20rpx;
  color: #BBBBBB;
}
.list .flex-item.img{
  width: 30%;
}
.img image{
  width: 100%;
  height: 200rpx;
}
.star-icon{
  width: 40rpx;
  height: 40rpx;
}