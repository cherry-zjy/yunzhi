/**index.wxss**/
.slide-image{
  width: 100%;
  height: 100%;
}
/* 搜索框 */
.search-box {
  width: 100%;
  position: relative;
  background-color: #EFEFF4;
  padding: 20rpx 0;
}
.serachbox{
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.center{
  text-align: center;
  color: #BBBBBB;
  padding-left: 20rpx; 
}
.search {
  background-color: #fff;
  font-size: 30rpx;
  padding: 5rpx 0 5rpx calc(8% + 20rpx);
}
.serachbox .search-icon {
  position: absolute;
  left: 8%;
  width: 40rpx;
  height: 40rpx;
  top:28rpx;
  z-index: 1;
}
/* 分类 */
.title-btnbox {
  float:left;
  width: 100%;
}

.title-btnbox .title-btn {
  width: 33.33%;
  text-align: center;
  margin-top: 20rpx;
  float:left;
}

.title-btnbox .title-btn .title-imgbtn {
  width: 100rpx;
  text-align: center;
  margin-top: 20rpx;
}

.title-btnbox .title-btn .title-imgbtn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.title-name {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  position: relative;
  top: -10rpx;
}
.greyline{
  height: 20rpx;
  background-color: #EEEEEE;
  margin-top: 20rpx;
  float:left;
  width: 100%;
}
/* 仪器列表 */
.recommend{
  padding: 10rpx 0;
  text-align: center;
  display:flex;
  align-items: center;
  justify-content: center;
  float:left;
  width: 100%;
}
.recommend image{
  width: 60rpx;
  height: 60rpx;
  display:table;
  vertical-align: middle;
  margin-right: 10rpx;
}
.recommend text{
  font-size: 30rpx;
}
.goods-list {
  width: calc(50% - 22rpx);
  float: left;
  padding: 10rpx;
  border-top:1rpx solid #EEEEEE;
}

.goods-list:nth-child(even){
  border-left: 1rpx solid #EEEEEE;
}

.goods-img {
  width: 100%;
  height: 300rpx;
}

.goods-info {
  width: 325rpx;
  padding: 20rpx 0 20rpx 20rpx;
  margin-top: -10rpx;
}

.goods-name {
  font-size: 28rpx;
}

.goods-price {
  color: #999999;
  font-size: 28rpx;
}
.icon{
  position:fixed;
  bottom:10%;
  right:10%;
  width:110rpx;
  height:110rpx;
  z-index:1;
}