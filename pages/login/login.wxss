page{
  background-color: #fff;
  text-align: center;
}
.bg-icon{
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
}
.login-form {
  padding: 20rpx; 
  margin: 30rpx 40rpx 0 40rpx;
  background-color: #fff;
}
.input-number{
  margin-left: 10rpx;
}
.phonet{
  font-size:30rpx;
  line-height: 43rpx;
}
.getcode{
  font-size: 30rpx;
  color: #666666;
}
