  overflow:hidden;
}
.errod {
  color: red;
  font-size: 28rpx;
  line-height: 43rpx;
  padding-left: 30rpx;
}
.btn-area{
  padding: 0;
}
.btn {
  background: #26A3DE;
  width: 100%;
  color: #fff;
  margin-top: 50rpx;
}
.service{
  margin-top: 50rpx;
  text-align: center;
  font-size: 25rpx;
}
.grey{
