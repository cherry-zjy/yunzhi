  text-align: left;
  background: #fff;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: rgba(179, 179, 179, 1);
}
.input-box.phone{
  width: 80%;
}
.code{
  width: 80%;
}
.flex-wrp {
  display:flex;
  margin-top: 80rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid rgb(173,173,173);
